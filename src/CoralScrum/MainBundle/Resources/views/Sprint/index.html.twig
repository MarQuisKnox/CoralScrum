{% extends "CoralScrumMainBundle::index.html.twig" %}

{% block menu %}
    {% include "CoralScrumMainBundle:Main:menu.html.twig" %}
{% endblock %}

{% block container -%}
    <h1>Sprint list</h1>

    <a class="button" href="{{ path('sprint_new', { 'projectId': projectId }) }}">Create a new Sprint</a>

    <table class="defaultTab">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Stories</th>
                <th>Start Date</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sprint_show', { 'projectId': projectId, 'id': entity.id }) }}">#{{ entity.id }}</a></td>
                <td>
                    <ul class="list">
                    {% for userstory in entity.userstory %}
                        <li><a href="{{ path('userstory_show', { 'projectId': projectId, 'id': userstory.getId() }) }}">{{ userstory }}</a></li>
                    {% endfor %}
                    </ul>
                </td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.duration }}</td>
                <td>
                    <a class="edit" href="{{ path('sprint_edit', { 'projectId': projectId, 'id': entity.id }) }}"></a>
                    <a class="delete" href=""></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
