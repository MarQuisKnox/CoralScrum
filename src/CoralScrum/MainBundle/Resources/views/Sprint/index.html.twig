{% extends "CoralScrumMainBundle::index.html.twig" %}

{% block container -%}
    <h1>Sprint list</h1>

    <table class="records_list cleanTab">
        <thead>
            <tr>
                <th>Id</th>
                <th>Startdate</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sprint_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.duration }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sprint_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('sprint_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('sprint_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
