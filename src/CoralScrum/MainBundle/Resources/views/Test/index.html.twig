{% extends "CoralScrumMainBundle::index.html.twig" %}

{% block container -%}
    <h1>Test list</h1>

    <table class="records_list cleanTab">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Input</th>
                <th>Testcase</th>
                <th>Expectedresult</th>
                <th>Date</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('test_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.input }}</td>
                <td>{{ entity.testCase }}</td>
                <td>{{ entity.expectedResult }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.comment }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('test_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('test_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('test_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
