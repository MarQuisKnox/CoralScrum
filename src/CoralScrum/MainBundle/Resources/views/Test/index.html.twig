{% extends "CoralScrumMainBundle::index.html.twig" %}

{% block menu %}
    {% include "CoralScrumMainBundle:Main:menu.html.twig" %}
{% endblock %}

{% block container -%}
    <h1>Test list</h1>

    <a class="button" href="{{ path('test_new', { 'projectId': projectId }) }}">Create a new Test</a>

    <table class="defaultTab tablesorter">
        <thead>
            <tr>
                <th>ID</th>
                <th>User Story</th>
                <th>Title</th>
                <th>Input</th>
                <th>Test Case</th>
                <th>Expected Result</th>
                <th>State</th>
                <th>Tester</th>
                <th>Date</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('test_show', { 'projectId': projectId, 'id': entity.id }) }}">#{{ entity.id }}</a></td>
                <td><a href="{{ path('userstory_show', { 'projectId': projectId, 'id': entity.userstory.getId() }) }}">{{ entity.userstory }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.input }}</td>
                <td>{{ entity.testCase }}</td>
                <td>{{ entity.expectedResult }}</td>
                <td>
                    {%- if entity.state == 0 -%}
                    <img title="Not tested" src="{{ asset('img/forbidden.png') }}" alt=""/>
                    {%- elseif entity.state == 1 -%}
                    <img title="Test passed" src="{{ asset('img/valid.png') }}" alt=""/>
                    {%- elseif entity.state == 2 -%}
                    <img title="Test failed" src="{{ asset('img/error.png') }}" alt=""/>
                    {%- endif -%}
                </td>
                <td>{{ entity.tester }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.comment }}</td>
                <td>
                    <a class="edit" href="{{ path('test_edit', { 'projectId': projectId, 'id': entity.id }) }}"></a>
                    <a class="delete" href=""></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
    <script>
        $(document).ready(function() {
            $(".tablesorter").tablesorter();
        });
    </script>
{% endblock %}
