{% extends "CoralScrumMainBundle::index.html.twig" %}

{% block menu %}
    {% include "CoralScrumMainBundle:Main:menu.html.twig" %}
{% endblock %}

{% block container -%}
    <h1>User Stories list</h1>

    <a class="button" href="{{ path('userstory_new', { 'projectId': projectId }) }}">Create a new User Story</a>

    <table class="defaultTab">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Difficulty</th>
                <th>Finished</th>
                <th>Validated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userstory_show', { 'projectId': projectId, 'id': entity.id }) }}">#{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.priority }}</td>
                <td>{{ entity.difficulty }}</td>
                <td>{{ entity.isFinished }} <img src="{{ asset('img/valid.png') }}" /></td>
                <td>{{ entity.isValidated }} <img src="{{ asset('img/error.png') }}" /></td>
                <td>
                    <a class="edit" href="{{ path('userstory_edit', { 'projectId': projectId, 'id': entity.id }) }}"></a>
                    <a class="delete" href=""></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
