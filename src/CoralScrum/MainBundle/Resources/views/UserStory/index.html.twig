{% extends "CoralScrumMainBundle::index.html.twig" %}

{% block container -%}
    <h1>UserStory list</h1>

    <table class="records_list cleanTab">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Priority</th>
                <th>Difficulty</th>
                <th>Isfinished</th>
                <th>Isvalidated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('userstory_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.priority }}</td>
                <td>{{ entity.difficulty }}</td>
                <td>{{ entity.isFinished }}</td>
                <td>{{ entity.isValidated }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('userstory_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('userstory_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('userstory_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
