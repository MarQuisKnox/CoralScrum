{% extends "CoralScrumMainBundle::index.html.twig" %}

{% block container -%}
    <h1>UserStory</h1>

    <table class="record_properties cleanTab">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ entity.priority }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ entity.difficulty }}</td>
            </tr>
            <tr>
                <th>Isfinished</th>
                <td>{{ entity.isFinished }}</td>
            </tr>
            <tr>
                <th>Isvalidated</th>
                <td>{{ entity.isValidated }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('userstory') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('userstory_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
