{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/design.css') }}" type="text/css" media="screen" />
{% endblock %}

{% block body %}

		<header>
			<div class="container">
				<div class="logo">
					{% include "CoralScrumMainBundle:Main:header/logo.html.twig" %}
				</div>
				<div id="infos">
					
				</div>
			</div>
		</header>
		
		{#% include "CoralScrumMainBundle:Main:menu.html.twig" %#}

		<div id="mainContainer">
			<div class="container">

				{% block container %}
				<ul class="squareLi">
					<li><a href="{{ path('fos_user_registration_register') }}">Create an account</a></li>
					<li><a href="{{ path('fos_user_security_login') }}">Log In</a></li>
					<li><a href="{{ path('CSM_project_add') }}">Add project</a></li>
					<li><a href="{{ path('CSM_project_selection') }}">Select project</a></li>
					<li><a href="{{ path('CSM_project_task', {'id': 1}) }}">Task list</a></li>
					<li><a href="{{ path('CSM_project_task_add', {'id': 1}) }}">Add task</a></li>
				</ul>
				{#% include "CoralScrumMainBundle:Scrum:task.html.twig" %#}
				{#% include "CoralScrumMainBundle:Scrum:sprint.html.twig" %#}
				{#% include "CoralScrumMainBundle:Scrum:userstory.html.twig" %#}

				{% endblock %}
			</div>
			<div class="clear"></div>
		</div>

		<div id="footer">
			{% include "CoralScrumMainBundle:Main:footer.html.twig" %}
		</div>

{% endblock %}

{% block javascripts %}
	<script src="{{ asset('js/jquery-1.10.2.min.js') }}" type="text/javascript"></script>
	<script src="{{ asset('js/jquery.tablesorter.min.js') }}" type="text/javascript"></script>
	<script>
		$(document).ready(function() {
			$(".tablesorter").tablesorter(); 
		});
	</script>
{% endblock %}

